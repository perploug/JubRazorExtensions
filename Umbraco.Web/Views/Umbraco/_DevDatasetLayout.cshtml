<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8" />
	<title>@ViewBag.Title</title>
	<link rel="stylesheet" href="@Url.Content("~/Content/Styles/main.css")" type="text/css" />
	<!--[if IE]>
		<script src="http://html5shiv.googlecode.com/svn/trunk/html5.js"></script><![endif]-->
	<!--[if lte IE 7]>
		<link rel="stylesheet" type="text/css" media="all" href="@Url.Content("~/Content/Styles/ie.css")"/>
		<script src="@Url.Content("~/Scripts/ie8.js")" type="text/javascript"></script><![endif]-->
	<!--[if lt IE 7]>
		<link rel="stylesheet" type="text/css" media="all" href="@Url.Content("~/Content/Styles/ie6.css")"/><![endif]-->
	@RenderSection("Stylesheets", required: false)

    <script src="@Url.Content("~/Scripts/jQuery/jquery.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jQuery/jquery.validate.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jQuery/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
</head>
<body id="index" class="home">

	<header id="banner" class="body">
		@if (IsSectionDefined("PageTitle"))
		{
			<h1><a href="#">@RenderSection("PageTitle", required: false)</a></h1>
		}
		<nav> 
			@Html.Partial("Navigation")
		</nav>
	</header>

	<section id="content" class="body">
		@RenderBody()
	</section>

	<footer id="contentinfo" class="body">
		<address id="about" class="vcard body">
			<span class="primary">
				<strong><a href="http://umbraco.com/umbraco-5-status.aspx" class="fn url">Jupiter</a></strong>
				<span class="role">The future of Umbraco is coming</span>
			</span>



			<span class="bio">Umbraco v5 is a ground-up rebuild of your favorite CMS and is built on top of ASP.Net MVC 3. It will look the same and have all of the same great Umbraco ideas powering the new CMS but the underlying architecture has been completely upgraded. <a href="http://umbraco.com/umbraco-5-status/what-is-v5.aspx">More on v5</a></span>

		</address>

		<p><a href="http://umbraco.com">Umbraco.com</a></p>
	</footer>

</body>
</html>
